<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signupPage">

    <TextView
        android:id="@+id/textid"
        android:layout_width="250dp"
        android:layout_height="95dp"
        android:text="Your fries deserve better."
        android:textSize="35dp"
        android:textColor="#FA2A2A"
        android:fontFamily="sans-serif-black"


        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="103dp" />

    <ImageView
        android:id="@+id/backiconid"
        android:layout_width="50dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/backicon"
        android:tint="#FB0101"

        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="46dp" />

    <TextView
        android:id="@+id/nextTextID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Join TomatoBasil now. It's free!"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="198dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nextInput"
        android:layout_width="446dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:hint="FIRST NAME"
        app:boxBackgroundMode="outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:boxStrokeColor="@color/red"
        app:layout_constraintTop_toBottomOf="@+id/nextTextID">

        <com.google.android.material.textfield.TextInputEditText
            app:boxStrokeColor="@color/red"

            android:id="@+id/mainLayout"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        app:hintTextColor="@color/red"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:boxBackgroundMode="outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nextInput">

        <com.google.android.material.textfield.TextInputEditText
            app:hintTextColor="@color/red"
            app:boxStrokeColor="@color/red"
            android:id="@+id/secondLayout"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:hint="LAST NAME" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/thirdText"
        android:layout_width="446dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:boxBackgroundMode="outline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/thirdLayout"
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:hint="EMAIL" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passEditText"
        app:endIconMode= "password_toggle"

        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="32dp"
        app:boxBackgroundMode="outline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PASSWORD" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:backgroundTint="#FA2A2A"
        android:fontFamily="sans-serif"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"


        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="603dp" />

</androidx.constraintlayout.widget.ConstraintLayout>



